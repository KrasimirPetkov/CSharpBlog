@model IPagedList<CSharpBlog.Models.Post>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Home";
}

<div class="row">
    <div class="col-xs-12">
        <img src="~/Content/Images/layout-img.png" class="img-responsive img-header" />
    </div>
</div>
<div class="row">
    <div class="col-md-9">
        @foreach (var post in Model)
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-12 post-title text-center">
                            @Html.ActionLink(post.Title, "Details", "Posts", new { id = post.Id }, null)
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="col-xs-6 col-md-3">
                        @post.Category.Name
                    </div>
                    <div class="col-xs-6 col-md-3">
                        @post.Author.FullName
                    </div>
                    <div class="col-xs-6 col-md-3">
                        @post.DateCreated
                    </div>
                    <div class="col-xs-6 col-md-3">
                        <span class="glyphicon glyphicon-eye-open"></span>
                        @post.Views<span> | </span>
                        <span class="glyphicon glyphicon-comment"></span>
                        @post.Comments.Count()
                    </div>
                </div>
                <div class="panel-body">
                    <div class="col-xs-12">
                        <p>@Html.Raw(post.Body)</p>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-xs-8">
                            @foreach (var tag in post.Tags)
                            {
                                <span class="btn btn-default">@tag.Name</span>
                            }
                        </div>
                        <div class="col-xs-4 text-right">
                            @if (HttpContext.Current.User.Identity.IsAuthenticated && HttpContext.Current.User.IsInRole("Administrator"))
                            {
                                <div class="btn btn-group">
                                    @Html.ActionLink("Edit", "Edit", "Posts", new { id = post.Id }, new { @class = "btn btn-info" })
                                    @Html.ActionLink("Delete", "Delete", "Posts", new { id = post.Id }, new { @class = "btn btn-info" })
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
    <div class="col-md-3">
        <div class="well">
            <h1>Sidebar</h1>
            @using (Html.BeginForm("Index", "Home", FormMethod.Post))
            {
                @Html.Label("Search: ")
                @Html.TextBox("search", null, new { @class = "form-control" })
                <input type="submit" value="Search" class="btn btn-default" />
            }
        </div>
    </div>
</div>