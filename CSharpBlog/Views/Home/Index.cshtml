@model IPagedList<CSharpBlog.Models.Post>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Home";
}

<div class="row">
    <div class="col-xs-12">
        <img src="~/Content/Images/layout-img.png" class="img-responsive img-header" />
    </div>
</div>
<div class="row">
    <div class="col-md-9">
        @foreach (var post in Model)
        {
            { Html.RenderPartial("_Post", post); }
        }
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, q = (string)ViewBag.Q }))
    </div>
    <div class="col-md-3">
        <div class="well">
            <h1>Sidebar</h1>
            @using (Html.BeginForm("Index", "Home", FormMethod.Post))
            {
                @Html.Label("Search: ")
                @Html.TextBox("q", null, new { @class = "form-control" })
                <input type="submit" value="Search" class="btn btn-default" />
            }
        </div>
    </div>
</div>